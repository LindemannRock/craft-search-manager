{% import "_includes/forms" as forms %}

{% set styles = widgetConfig.getStyles() %}

<p class="light">{{ "Customize the visual appearance of the search widget. Colors support hex values."|t('search-manager') }}</p>

{# ========================================
   MODAL
   ======================================== #}
<h2>{{ "Modal"|t('search-manager') }}</h2>

<div class="flex" style="gap: 48px; flex-wrap: wrap;">
	<div>
		<h4 style="margin-top: 0;">{{ "Light Mode"|t('search-manager') }}</h4>
		<div class="flex" style="gap: 24px; flex-wrap: wrap;">
			{{ forms.colorField({
				label: 'Background'|t('search-manager'),
				id: 'styles-modalBg',
				name: 'settings[styles][modalBg]',
				value: styles.modalBg,
			}) }}
			{{ forms.colorField({
				label: 'Border'|t('search-manager'),
				id: 'styles-modalBorderColor',
				name: 'settings[styles][modalBorderColor]',
				value: styles.modalBorderColor,
			}) }}
		</div>
	</div>
	<div>
		<h4 style="margin-top: 0;">{{ "Dark Mode"|t('search-manager') }}</h4>
		<div class="flex" style="gap: 24px; flex-wrap: wrap;">
			{{ forms.colorField({
				label: 'Background'|t('search-manager'),
				id: 'styles-modalBgDark',
				name: 'settings[styles][modalBgDark]',
				value: styles.modalBgDark,
			}) }}
			{{ forms.colorField({
				label: 'Border'|t('search-manager'),
				id: 'styles-modalBorderColorDark',
				name: 'settings[styles][modalBorderColorDark]',
				value: styles.modalBorderColorDark,
			}) }}
		</div>
	</div>
</div>

<div style="margin-top: 24px;">
	<h4>{{ "Dimensions"|t('search-manager') }}</h4>
	<div class="flex" style="gap: 24px; flex-wrap: wrap;">
		{{ forms.textField({
			label: 'Max Width (px)'|t('search-manager'),
			id: 'styles-modalMaxWidth',
			name: 'settings[styles][modalMaxWidth]',
			value: styles.modalMaxWidth,
			type: 'number',
			min: 300,
			max: 1200,
			size: 10,
		}) }}
		{{ forms.textField({
			label: 'Border Radius (px)'|t('search-manager'),
			id: 'styles-modalBorderRadius',
			name: 'settings[styles][modalBorderRadius]',
			value: styles.modalBorderRadius,
			type: 'number',
			min: 0,
			max: 50,
			size: 10,
		}) }}
		{{ forms.textField({
			label: 'Border Width (px)'|t('search-manager'),
			id: 'styles-modalBorderWidth',
			name: 'settings[styles][modalBorderWidth]',
			value: styles.modalBorderWidth,
			type: 'number',
			min: 0,
			max: 10,
			size: 10,
		}) }}
	</div>
	{{ forms.textField({
		label: 'Box Shadow'|t('search-manager'),
		instructions: 'CSS box-shadow value (e.g., "0 25px 50px -12px rgba(0,0,0,0.25)")'|t('search-manager'),
		id: 'styles-modalShadow',
		name: 'settings[styles][modalShadow]',
		value: styles.modalShadow,
	}) }}
