<div class="lr-unified-cards">
    {% include 'lindemannrock-base/_components/cards/unified-card' with {
        value: '—',
        description: 'Cache Hit Rate'|t('search-manager'),
        align: 'center',
        id: 'cache-hit-rate',
    } only %}

    {% include 'lindemannrock-base/_components/cards/unified-card' with {
        value: '—',
        description: 'Cache Hits'|t('search-manager'),
        align: 'center',
        id: 'cache-hits',
    } only %}

    {% include 'lindemannrock-base/_components/cards/unified-card' with {
        value: '—',
        description: 'Cache Misses'|t('search-manager'),
        align: 'center',
        id: 'cache-misses',
    } only %}

    {% include 'lindemannrock-base/_components/cards/unified-card' with {
        value: '—',
        description: 'Total Searches'|t('search-manager'),
        align: 'center',
        id: 'total-searches-perf',
    } only %}
</div>

<h2 class="lr-section-heading">{{ "Response Time Trend"|t('search-manager') }}</h2>

<div class="lr-analytics-charts">
    <div class="lr-chart-container full-width">
        <canvas id="performance-chart"></canvas>
    </div>
</div>

<h2 class="lr-section-heading">{{ "Query Performance"|t('search-manager') }}</h2>
<p class="light lr-note-tight">{{ "Note: With limited data, queries may appear in both tables. Tables will differentiate as more unique searches are tracked (minimum 3 searches per query required)."|t('search-manager') }}</p>

<div class="lr-analytics-charts two-columns">
    <div class="lr-chart-container">
        <h3>{{ "Fastest Queries (Top 10)"|t('search-manager') }}</h3>
        <div class="lr-table-scroll">
            <table class="data fullwidth">
                <thead>
                    <tr>
                        <th>{{ 'Query'|t('search-manager') }}</th>
                        <th>{{ 'Site'|t('search-manager') }}</th>
                        <th>{{ 'Avg Time'|t('search-manager') }}</th>
                        <th>{{ 'Searches'|t('search-manager') }}</th>
                    </tr>
                </thead>
                <tbody id="top-queries-body">
                    <tr><td colspan="4" class="thin light">{{ "Loading..."|t('search-manager') }}</td></tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="lr-chart-container">
        <h3>{{ "Slowest Queries (Top 10)"|t('search-manager') }}</h3>
        <div class="lr-table-scroll">
            <table class="data fullwidth">
                <thead>
                    <tr>
                        <th>{{ 'Query'|t('search-manager') }}</th>
                        <th>{{ 'Site'|t('search-manager') }}</th>
                        <th>{{ 'Avg Time'|t('search-manager') }}</th>
                        <th>{{ 'Searches'|t('search-manager') }}</th>
                    </tr>
                </thead>
                <tbody id="worst-queries-body">
                    <tr><td colspan="4" class="thin light">{{ "Loading..."|t('search-manager') }}</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
