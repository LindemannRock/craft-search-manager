{# Check if any query rules exist #}
{% set rulesExist = craft.app.db.createCommand("SELECT COUNT(*) FROM {{%searchmanager_query_rules}}").queryScalar() > 0 %}

{% if not rulesExist %}
    <div style="text-align: center; padding: 60px 20px;">
        <div style="font-size: 48px; margin-bottom: 20px; opacity: 0.3;">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line><line x1="8" y1="11" x2="14" y2="11"></line></svg>
        </div>
        <h2 style="margin-bottom: 10px; color: #596673;">{{ "No Query Rules Created"|t('search-manager') }}</h2>
        <p class="light" style="margin-bottom: 20px;">{{ "Create query rules to add synonyms, boost results, filter searches, or redirect users."|t('search-manager') }}</p>
        <a href="{{ url('search-manager/query-rules/new') }}" class="btn submit">{{ "Create Query Rule"|t('search-manager') }}</a>
    </div>
{% else %}
    <div style="display: flex; justify-content: flex-end; margin-bottom: 15px;">
        <div class="btngroup">
            <button type="button" class="btn menubtn" data-icon="download">{{ "Export"|t('search-manager') }}</button>
            <div class="menu" data-align="right">
                <ul>
                    <li><a href="#" class="tab-export" data-action="search-manager/analytics/export-tab" data-format="csv" data-params='{"tab":"query-rules"}'>{{ "Export CSV"|t('search-manager') }}</a></li>
                    <li><a href="#" class="tab-export" data-action="search-manager/analytics/export-tab" data-format="json" data-params='{"tab":"query-rules"}'>{{ "Export JSON"|t('search-manager') }}</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="analytics-charts two-columns">
        <div class="chart-container">
            <h3>{{ "Top Triggered Rules"|t('search-manager') }}</h3>
            <div class="table-scroll-container">
                <table class="data fullwidth">
                    <thead>
                        <tr>
                            <th>{{ 'Rule Name'|t('search-manager') }}</th>
                            <th>{{ 'Action Type'|t('search-manager') }}</th>
                            <th>{{ 'Hits'|t('search-manager') }}</th>
                            <th>{{ 'Avg Hits'|t('search-manager') }}</th>
                        </tr>
                    </thead>
                    <tbody id="top-rules-body">
                        <tr><td colspan="4" class="thin light">{{ "Loading..."|t('search-manager') }}</td></tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="chart-container">
            <h3>{{ "Rules by Action Type"|t('search-manager') }}</h3>
            <canvas id="rules-by-type-chart" style="max-height: 250px;"></canvas>
        </div>
    </div>

    <h2 style="margin: 30px 0 20px;">{{ "Top Queries Triggering Rules"|t('search-manager') }}</h2>

    <div class="analytics-charts">
        <div class="chart-container full-width">
            <div class="table-scroll-container">
                <table class="data fullwidth">
                    <thead>
                        <tr>
                            <th>{{ 'Query'|t('search-manager') }}</th>
                            <th>{{ 'Rules Triggered'|t('search-manager') }}</th>
                            <th>{{ 'Times Searched'|t('search-manager') }}</th>
                        </tr>
                    </thead>
                    <tbody id="rule-queries-body">
                        <tr><td colspan="3" class="thin light">{{ "Loading..."|t('search-manager') }}</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <p class="light" style="margin-top: 20px; font-size: 12px;">
        {{ "Tip: Rules with low hit counts may have patterns that don't match common searches. Consider adjusting the match type or pattern."|t('search-manager') }}
    </p>
{% endif %}
